# OpenMcp Configuration
# Copy this file to .env and adjust values as needed

# --- PostgreSQL MCP Server ---
DATABASE_URL=postgres://openmcp_readonly:readonly_pass@test-db:5432/test_db
POSTGRES_READ_ONLY=true
Postgres_Init_Script_PATH=./tests/init-scripts
Init_Script=/docker-entrypoint-initdb.d
# --- FileSystem MCP Server ---
FILESYSTEM_ROOT=/data
FILESYSTEM_HOST_PATH=./sandbox

# --- DuckDuckGo MCP Server ---
DDG_DEFAULT_MAX_RESULTS=10

# --- Host Ports ---
PORT_POSTGRES=8081
PORT_FILESYSTEM=8082
PORT_DUCKDUCKGO=8083

# --- Docker Images ---
MCP_POSTGRES_IMAGE=openmcpserver/mcp-postgres:latest
MCP_FILESYSTEM_IMAGE=openmcpserver/mcp-filesystem:latest
MCP_DUCKDUCKGO_IMAGE=openmcpserver/mcp-duckduckgo:latest